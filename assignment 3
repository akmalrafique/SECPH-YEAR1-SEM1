int main(){
const int size=20
char student[size];
int intake[size],enrollement[size],output[size],index,index2,student,intake,enroll,output;
int totalintake=0,totalenroll=0,totaloutput=0;
getInput(.......);
totalintake=calTotal(intake,size);
totalenroll=calTotal(enrollement,size);
totaloutput=calTotal(output,size);

ifstream infile("input.txt");
ofstream outfile("output.txt");
outFile << left << setw(10) << "UNIVERSITY"<< right << setw(10) << "INTAKE"<< setw(12) << "ENROLMENT"<< setw(10) << "OUTPUT" << endl;
while(infile<<student<<intake<<enroll<<output){
outfile<< left << setw(10)<<student<< right << setw(10)<<" "<<intake<< setw(10)<<enroll<<setw(10)<<output<<endl;
}
outfile<<"--------------------------------------------------------------------------------"<<endl;
cout<<"total"<<setw(6)<<totalintake<<setw(6)<<totalenroll<<setw(6)<<totaloutput<<endl;
cout<<"averagae"<<setw(6)<<totalintake/size<<setw(6)<<totalenroll/size<<setw(6)<<totaloutput/size<<endl;
index=getLowest(intake,size);
cout<<"THE LOWEST NUMBER OF STUDENTS' INTAKE = "<<intake[index]<<"("<<student[index]<<")endl;
index=getLowest(enrollment,size);
cout<<"THE LOWEST NUMBER OF STUDENTS' ENROLMENT = "<<enrollment[index]<<"("<<student[index]<<")endl;
index=getLowest(output,size);
cout<<"THE LOWEST NUMBER OF STUDENTS' OUTPUT = "<<output[index]<<"("<<student[index]<<")endl<<endl;
index2=getHighest(intake,size);
cout<<"THE HIGHEST NUMBER OF STUDENTS' INTAKE = "<<intake[index2]<<"("<<student[index2]<<")endl;
index2=getHighest(enrollment,size);
cout<<"THE HIGHEST NUMBER OF STUDENTS' ENROLMENT = "<<enrollment[index2]<<"("<<student[index2]<<")endl;
index2=getHighest(output,size);
cout<<"THE HIGHEST NUMBER OF STUDENTS' OUTPUT = "<<output[index2]<<"("<<student[index2]<<")endl<<endl;
}


int getInput(STUDENT[],INTAKE[],ENROLLMENT[],OUTPUT[]){
int i=0;
ifstream infile("input.txt");
if(!infile){
cout<<"fail to open the file";
return 0;
}
while(infile>>STUDENT[i]>>INTAKE[i]>>ENROLLMENT[i]>>OUTPUT[i]){
i++;
}
}
int calTotal( int total[],int SIZE){
int totall=0;
for(int a=0;a<SIZE;a++){
totall+=total[a];
}
return totall;
}
int getLowest(int ARRAY[],int SIZE){
int lowest=9999,lowindex;
for(int i=0;i<SIZE;i++){
if(ARRAY[i]<lowest){
lowest=ARRAY[i];
lowindex=i;
}
}
return lowindex;
}
int getHighest(int ARRAY[],int SIZE){
int highest=-1,highindex;
for(int i=0;i<SIZE;i++){
if(ARRAY[i]>highest){
highest=ARRAY[i];
highindex=i;
}
}
return highindex;
}

