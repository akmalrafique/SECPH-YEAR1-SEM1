#include<iostream>
#include<fstream>
#include<iomanip>
using namespace std;
int main(){
const int size=20
char student[size];
int intake[size],enrollement[size],output[size],index,index2;
int totalintake=0,totalenroll=0,totaloutput=0;
getInput(.......);
totalintake=calTotal(intake,size);
totalenroll=calTotal(enrollement,size);
totaloutput=calTotal(output,size);
index=getLowest(intake,size);
index=getLowest(enrollment,size);
index=getLowest(output,size);
index2=getHighest(intake,size);
index2=getHighest(enrollment,size);
index2=getHighest(output,size);
}
void getInput(STUDENT[],INTAKE[],ENROLLMENT[],OUTPUT[]){
int i=0;
ifstream infile("input.txt");
if(!infile){
cout<<"fail to open the file";
return 0;
}
while(infile>>STUDENT[i]>>INTAKE[i]>>ENROLLMENT[i]>>OUTPUT[i]){
i++;
}
}
int calTotal( int total[],int SIZE){
int totall=0;
for(int a=0;a<SIZE;a++){
totall+=total[a];
}
return totall;
}
int getLowest(int ARRAY[],int SIZE){
int lowest=9999,lowindex;
for(int i=0;i<SIZE;i++){
if(ARRAY[i]<lowest){
lowest=ARRAY[i];
lowindex=i;
}
}
return lowindex;
}
int getHighest(int ARRAY[],int SIZE){
int highest=-1,highindex;
for(int i=0;i<SIZE;i++){
if(ARRAY[i]>highest){
highest=ARRAY[i];
highindex=i;
}
}
return highindex;
}

